<div class="row">
  <form class="form-horizon">
    <div class="form-group">
      <label for="ask" class="col-sm-2 control-label">Question:</label>
      <div class="col-sm-10">
        {{input type="text" class="form-control" value=ask id="ask"}}
      </div>
    </div>

    <div class="form-group">
      <label for="author" class="col-sm-2 control-label">Asking:</label>
      <div class="col-sm-10">
        {{input type="text" class="form-control" value=author id="author"}}
      </div>
    </div>

    <div class="form-group">
      <label for="notes" class="col-sm-2 control-label">Additional notes:</label>
      <div class="col-sm-10">
        {{input type="text" class="form-control" value=notes id="notes"}}
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button class="btn btn-default" {{action "saveQuestion"}}>Post question</button>
      </div>
    </div>
  </form>
</div>
