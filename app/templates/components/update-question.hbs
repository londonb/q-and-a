<div class="row">
  <form class="form-horizon">
    <div class="form-group">
      <label for="ask" class="col-sm-2 control-label">Question:</label>
      <div class="col-sm-10">
        {{input type="text" class="form-control" value=question.ask}}
      </div>
    </div>

    <div class="form-group">
      <label for="author" class="col-sm-2 control-label">Asking:</label>
      <div class="col-sm-10">
        {{input type="text" class="form-control" value=question.author }}
      </div>
    </div>

    <div class="form-group">
      <label for="notes" class="col-sm-2 control-label">Additional notes:</label>
      <div class="col-sm-10">
        {{input type="text" class="form-control" value=question.notes }}
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button class="btn btn-default" {{action "update" question}}>Update question</button>
      </div>
    </div>
  </form>
</div>
